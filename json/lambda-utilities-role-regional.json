{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "WEX Inc., AWS Lambda tools Role.",
  "Resources": {
    "WexCloudFormationLambdaUtilitiesRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": {
          "Ref": "RoleName"
        },
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "root",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:*",
                    "cloudformation:*",
                    "sts:AssumeRole",
                    "ram:ListResources"
                  ],
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    }
  },
  "Parameters": {
    "RoleName": {
      "Type": "String",
      "Description": "Lambda Utilities IAM Role name"
    }
  },
  "Outputs": {
    "WexCloudFormationLambdaUtilitiesRoleExport": {
      "Description": "Wex Inc., CFN AWS Lambda Utilities IAM Role",
      "Value": {
        "Fn::GetAtt": [
          "WexCloudFormationLambdaUtilitiesRole",
          "Arn"
        ]
      },
      "Export": {
        "Name": {
          "Fn::Join": [
            "-",
            [
              {
                "Ref": "AWS::StackName"
              },
              "role",
              "arn"
            ]
          ]
        }
      }
    }
  }
}
